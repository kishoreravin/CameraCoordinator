<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Enter Side"
        app:layout_constraintBottom_toTopOf="@+id/side_et"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/side_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Eg: front,back,left.."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/get_referal_code"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/get_referal_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Get Referal Code" />

    <TextView
        android:id="@+id/referal_code_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="30dp"
        android:backgroundTint="#ECD612"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal|vertical"
        android:gravity="center"
        android:textAllCaps="true"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/start_camera_button"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Start Camera" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="131dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Enter Referal Code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/entered_ref_code"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Referal Code"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/go_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>


</LinearLayout>